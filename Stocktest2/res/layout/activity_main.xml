<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/getHistoryText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/TestHistoryText" />
    
    <TextView
        android:id="@+id/textHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/getHistoryYQL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/TestHistoryYQL" />
    
    <TextView
        android:id="@+id/YQLHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/getQuoteButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Test_Button_Text" />
    
    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/getTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Total_Value_Button_Text" />
    
    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>



